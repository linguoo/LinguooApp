<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
    <shape>
        <gradient
                android:startColor="#00AFAE"
                android:centerColor="#AAAFAE"
                android:centerY="1.0"
                android:endColor="#00AFAE"
                android:angle="270"
        />
    </shape>
   </item>

  <item android:id="@android:id/progress">
	    <clip>
	        <shape>
	            <gradient
	                android:startColor="#00698C"
	                android:centerColor="#00698C"
	                android:centerY="1.0"
	                android:endColor="#00698C"
	                android:angle="270"
	            />
	        </shape>
	    </clip>
	</item>
</layer-list>